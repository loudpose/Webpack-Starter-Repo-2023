	- var data = require('../../../data/home.json')

mixin listItem(item)
	li="-->"
	li=item

.cover#cover-home(data-src-bg="./images/cover.jpg")
	h1.cover__title=data.title
	ul.cover__desc
		+listItem("pug")
		+listItem("sass")
		+listItem("js")
	.cover__desc.cover__desc--hidden=data.description
	a#btn-gh(href="https://github.com/loudpose/Webpack-Starter-Repo-2023" target="_blank")
		button.btn
			span.btn__text 
				span.btn__text--inner GitHub
