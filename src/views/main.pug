mixin listItem(item)
	li="-->"
	li=item

.cover#cover-home
	h1.cover__title Webpack 5 Starter Repo
	ul.cover__desc
		+listItem("pug")
		+listItem("sass")
		+listItem("js")
	.cover__desc Front-end environment for building JavaScript applications. Great for building static sites.
	a(href="https://github.com/loudpose" target="_blank")
		button.btn#btn-gh 
			span.btn__text 
				span.btn__text--inner GitHub